<% layout('/layouts/boilerplate')%>


    <div id="cluster-map" class="mt-4"></div>

    <div id="searchInput" class="input-group-lg mb-3 mt-3">
        <input type="text" id="search" class="form-control" placeholder="Search for a business ...">
      </div>
    <div>
    <ul id="businesses">
        <% for(let business of businesses) {%>
            <div class="card mb-3">
                <div class="row">

                    <div class="col-md-4">
                        <% if (business.images[0]) {%>
                            <img class="img-fluid" alt="" src="<%=business.images[0].url%>">
                            <% } else {%>
                                <img class="img-fluid" alt=""
                                    src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/600px-No_image_available.svg.png">

                                <% } %>
                    </div>

                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">
                                <%= business.title %>
                            </h5>
                            <p class="card-text">
                                <%= business.description %>
                            </p>

                            <p class="card-text">
                                <small class="text-muted">
                                    <%= business.location %>
                                </small>
                            </p>
                            <a href="/businesses/<%=business._id%>" class="btn btn-dark">View <%= business.title
                                    %></a>
                        </div>

                    </div>
                </div>
            </div>
            <%}%>
    </ul>

    <script>
        const businesses = { features: <%-JSON.stringify(businesses)%>}
        const mapToken = '<%-process.env.MAPBOX_TOKEN%>';
    </script>

<script src="/javascripts/search.js"></script>
    <script src="/javascripts/clusterMap.js"></script>