<% layout('/layouts/boilerplate')%>
    <div class="row">
        <h1 class="text-center">Edit business</h1>
        <div class="col-6 offset-3">
            <form action="/businesses/<%=business._id%>?_method=PUT" method="POST" enctype="multipart/form-data"
                class="validated-form">
                <div class="mb-3">
                    <label class="form-label" for="title">Title</label>
                    <input class="form-control" type="text" id="title" name="business[title]" required
                        value="<%=business.title%>">
                    <div class="valid-feedback">Looks good!</div>

                </div>
                <div class="mb-3">
                    <label class="form-label" for="location">Location</label>
                    <input class="form-control" type="text" id="location" name="business[location]" required
                        value="<%=business.location%>">
                    <div class="valid-feedback">Looks good!</div>

                </div>
                <div class="mb-3">
                    <label for="formFileMultiple" class="form-label">Add more images</label>
                    <input class="form-control" type="file" id="formFileMultiple" name="image" multiple>
                </div>

                <!-- <div class="mb-3">
                    <label class="form-label" for="price">business Price</label>
                    <div class="input-group">
                        <span class="input-group-text" id="price-label">$</span>
                        <input type="text" id="price" class="form-control" placeholder="0.00" aria-label="price"
                            aria-describedby="price-label" name="business[price]" required
                            value="<%=business.price%>">
                        <div class="valid-feedback">Looks good!</div>

                    </div>
                </div> -->

                <div class="mb-3">
                    <label class="form-label" for="description">Description</label>
                    <textarea class="form-control" type="text" id="description" name="business[description]"
                        required><%= business.description %> </textarea>
                    <div class="valid-feedback">Looks good!</div>
                </div>

                <div class="mb-3">
                    <% business.images.forEach((img,i)=> { %>
                        <img src="<%=img.thumbnail%>" alt="" class="img-thumbnail">
                        <div class="form-check-inline">
                            <input type="checkbox" id="image-<%=i%>" name="deleteImages[]" value="<%=img.filename%>">
                            <label for="image-<%=i%>">Delete?</label>
                        </div>

                        <% })%>
                </div>

                <div class="mb-3">
                    <button class="btn btn-dark">Update business</button>
                </div>
            </form>
        </div>
    </div>